<%- include('header'); -%>
    <script src="/js/home.js"></script>


    <div class="card">
        <div class="card-body">
            <h5 class="card-title">Want to transfer a file?</h5>
            <p class="card-text">Open this page on two devices, upload a file from one, then download it on the other
            </p>
            <p>This is NOT secure storage. <strong>DO NOT upload any sensitive information.</strong></p>
        </div>
    </div>

    <!-- Upload -->
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">Upload</h5>
            <div class="input-group mb-3">
                <input type="file" class="form-control" id="upload-button">
            </div>
            <div id="link-info"></div>
        </div>
    </div>

    <!-- Download -->
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">Download</h5>
            <p>Enter the three word phrase generated when the file was uploaded (case insensitive), then press enter
            </p>
            <!-- TODO only accept a-zA-Z -->
            <div class="input-group mb-3">
                <span class="input-group-text" id="basic-addon1">Code:</span>
                <input type="text" class="form-control" placeholder="three word phrase" aria-label="download code" aria-describedby="basic-addon1" onkeypress="download(this)">
                <button class="btn btn-outline-secondary" type="button" id="button-addon2" onkeypress="download(this)">Download</button>
            </div>
        </div>
    </div>
    <%- include('footer'); -%>